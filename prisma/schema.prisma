generator client {
  provider = "prisma-client-js"
  // provider = "postgresql"
  // output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Car {
  id            Int       @id @default(autoincrement())
  name          String
  numberOfSeats Int
  miles         Int
  price         Int
  image         String
  features      String[]    // ← این باید String[] باشد (آرایه)
  description   String
  make          String
  year          Int
  city          String
  model         String
  listerId      String
  messages      message[]   // پیشنهاد: messages (جمع)
  // بهتر است اضافه کنید
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model message {
  id        Int    @id @default(autoincrement())
  name      String
  message   String
  phone     String
  email     String
  listingID Int
  listing   Car    @relation(fields: [listingID], references: [id])
}
